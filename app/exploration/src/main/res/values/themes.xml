<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="LightAdjusted.Theme.App" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <item name="android:windowBackground">@color/background_primary</item>
    </style>

    <style name="PlatformAdjusted.Theme.App" parent="LightAdjusted.Theme.App">
        <item name="android:statusBarColor">@color/on_background_primary</item>
    </style>

    <style name="Theme.App" parent="PlatformAdjusted.Theme.App" />

    <style name="LightAdjusted.Theme.Starting" parent="Theme.SplashScreen">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <item name="android:windowBackground">@color/background_primary</item>
    </style>

    <style name="Theme.Starting" parent="LightAdjusted.Theme.Starting">
        <item name="postSplashScreenTheme">@style/Theme.App</item>
    </style>

</resources>
